{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="row card">
        <div class="_col-md-4">
            <div class="card-head">
                <header></header>
            </div>
            <div class="card-body height-8">

                <center>
                    {% if money < 100 %}
                        Сумма должна быть не меньше 100.00 USD
                    {% else %}
                        <table class="table table-condensed">
                            <thead>
                            <tr>
                                <th></th>
                                <th>Ваш Email</th>
                                <th>Сумма</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="success">
                                <th scope="row"></th>
                                <td>{{ user.email }}</td>
                                <td>{{ money }} $</td>
                                <td>
                                    <form method="post" action="https://payeer.com/merchant/">
                                        <input type="hidden" name="m_shop" value="{{ m_shop }}">
                                        <input type="hidden" name="m_orderid" value="{{ m_orderid }}">
                                        <input type="hidden" name="m_amount" value="{{ m_amount }}">
                                        <input type="hidden" name="m_curr" value="{{ m_curr }}">
                                        <input type="hidden" name="m_desc" value="{{ m_desc }}">
                                        <input type="hidden" name="m_sign" value="{{ sign }}">
                                        <input type="submit" class="btn btn-primary" name="m_process" value="send"/>
                                    </form>
                                </td>
                                <td>
                                    <button class="btn btn-primary"   onclick="window.location.href='{{ path('app_admin') }}'" style="background-color: #a8360a;">отмена</button>
                                </td>
                            </tr>
                            </tbody>
                        </table>

                    {% endif %}
                </center>


            </div><!--end .card-body -->
        </div><!--end .col -->
    </div>



{% endblock %}
