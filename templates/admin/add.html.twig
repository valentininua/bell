{% extends 'admin/base.html.twig' %}

{% block body %}

    <div class="row card">
        <div class="_col-md-4">
            <div class="card-head">
                <header>Пополнить</header>
            </div>
            <div class="card-body height-8">
                <center>
                    <form method="post" action="{{ path('app_admin_add_confirm') }}">
                        <div class="form-row">
                            <div class="form-group _col-md-6">
                                <label for="inputEmail4">Сума пополнения</label>
                                <input type="number" min="100.00" max="1000000.00" step="0.01" class="form-control"  name="money"  placeholder="$">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary"> Дальше </button>
                    </form>
                </center>
            </div><!--end .card-body -->
        </div><!--end .col -->
    </div>

{% endblock %}
