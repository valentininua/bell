{% extends 'index/base.html.twig' %}

{% block body %}
    <div class="text-center py-5"
         style="background-image: url('/main/site-assets/cover_curve.jpg');background-position:center bottom;background-size:cover;">
        <div class="container py-4 mt-4">
            <div class="row">
                <div class="col-md-12 text-white">
                    <h1 class="mb-2 display-5">ИНВЕСТИРУЙТЕ УВЕРЕННО</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center section py-5">
